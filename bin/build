#!/usr/bin/env bash
#
# Build and test code

main() {
  # Set repo root
  local repo_root
  repo_root=$(git rev-parse --show-toplevel)
  # Check environment
  "${repo_root}"/bin/check_environment
  # Install env
  pipenv install
  # Test
  pipenv run python -m pytest "${repo_root}"/src
}

main "$@"
